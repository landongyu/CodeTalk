{
  "name": "voice-code-mentor",
  "displayName": "Voice Code Mentor",
  "description": "语音交互式编程助手",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:voiceCodeMentor.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceCodeMentor.start",
        "title": "启动语音编程助手"
      }
    ]
  },
  "dependencies": {
    "@types/node": "^16.0.0",
    "dotenv": "^16.4.5",
    "microsoft-cognitiveservices-speech-sdk": "^1.24.0",
    "openai": "^4.28.0",
    "vscode": "^1.1.37"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/vscode": "^1.95.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
